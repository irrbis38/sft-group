        {
        value: 'Tver_region',
        label: 'Тверская область',
        isSelected: false
        },
        {
        value: 'Rostov_region',
        label: 'Ростовская область',
        isSelected: false
        },
        {
        value: 'Republic_of_Adygea',
        label: 'Республика Адыгея',
        isSelected: false
        },
        {
        value: 'Tula_region',
        label: 'Тульская область',
        isSelected: false
        }
    ] %}

{% set category_options = [
        {
        value: 'default-hide',
        label: 'Выбрать категорию',
        isSelected: true
        },
        {
        value: 'category_1',
