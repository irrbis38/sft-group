<section class="section">
    <div class="container">

        <div class="contact-us contact-us__contacts rounded">
            <div class="contact-us__bg"></div>
            <div class="contact-us__wrapper">

                <div class="contact-us__block">

                    <h2 class="h2 contact-us__tittle">Узнайте, как наша компания может помочь именно вам</h2>

                </div>

                <form action="#" class="contact-us__form contact-us__block">

                    <fieldset class="contact-us__fieldset">

                        {{ selectItem('contact-us__select', 'light', 'region', region_options) }}

                        {{ selectItem('contact-us__select', 'light', 'category', category_options) }}

                        {{ inputItem('user_name', 'light', '', 'text', 'Имя', false) }}

                        {{ inputItem('user_phone', 'light', '', 'text', 'Телефон', false) }}

                        {{ inputItem('user_email', 'light input_item__email', '', 'email', 'Email', false) }}

                        {{ inputItem('user_comment', 'light input_item__comment', '', 'text', 'Комментарий', false) }}

                    </fieldset>

                    <div class="contact-us__bottom">

                        <button class="contact-us__submit btn btn_white">Связаться с нами</button>

                        <p class="contact-us__confirm">Нажимая кнопку, Вы даете информированное согласие на обработку своих персональных данных</p>

                    </div>


                </form>

            </div>

        </div>

    </div>
</section>